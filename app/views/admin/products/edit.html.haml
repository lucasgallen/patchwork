%h1.mt-5
  = t('admin.edit_product')
  = link_to t('admin.delete'), admin_product_path(@product), method: :delete, class: 'ml-3 btn btn-sm text-uppercase btn-danger'
= form_with model: @product, url: admin_product_path, class: 'mb-5 mt-2', id: 'product-form' do |form|
  = render partial: 'form', locals: { form: form }
