%h4
  = link_to t('_products'), admin_products_path, class: 'text-reset'
  = link_to t('_create_new'), new_admin_product_path, class: 'btn btn-sm btn-success ml-3'
%ul.list-group.list-group-flush
  - @products.each do |product|
    %li.list-group-item
      = product.name
      %small.float-right= l(product.created_at, format: :record)
