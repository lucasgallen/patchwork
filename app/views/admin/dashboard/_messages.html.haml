%h2.mb-3.h2.text-center
  = link_to t('dashboard.messages'), admin_messages_path, class: 'text-reset'

%div.container-fluid.d-flex.justify-content-around.flex-wrap
  - @messages.each do |message|
    %div.card.mb-4{ style: 'width: 30%;' }
      %div.card-body
        %h5.card-title
          = message.title
        %h6.card-subtitle.mb-2.text-muted
          = message.about
        %h6.card-subtitle.mb-2.text-muted
          = message.author
        %p.card-text
          = message.body
        = link_to t('admin.view_message'), admin_message_path(message), class: 'card-link stretched-link'
