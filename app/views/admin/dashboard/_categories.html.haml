%h4
  = link_to t('_categories'), admin_categories_path, class: 'text-reset'
  = link_to t('_create_new'), new_admin_category_path, class: 'btn btn-sm btn-success ml-3'
%ul.list-group.list-group-flush
  - @categories.each do |cat|
    %li.list-group-item
      = cat.name
      %small.float-right= l(cat.created_at, format: :record)
