%div.row.justify-content-center.my-5
  %div.col-8.col-sm-7.col-md-6.col-md-5.col-lg-4
    %h2= t('devise.sessions.forgot_password')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = render 'devise/shared/error_messages', resource: resource
      .field.form-group
        = f.label :email, t('devise.sessions.email'), class: 'form-label'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
      .actions
        = f.submit t('devise.sessions.send_instructions'), class: 'btn btn-success mb-2'
    = render 'devise/shared/links'
