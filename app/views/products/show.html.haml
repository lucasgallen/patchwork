%h1= @product.name
%p= "Published: #{l(@product.created_at, format: :publishing)}"

%div.trix-content
  = @product.description.html_safe
- if user_signed_in? && current_user.role == 'admin'
  = link_to "Edit", edit_admin_product_path(@product)

%p= "Price: #{@product.price} #{@product.currency.upcase}"
