%footer
  = link_to t('about'), about_path
  = link_to t('contact'), contact_path
  - I18n.available_locales.each do |locale|
    - if locale != I18n.default_locale
      = link_to t('locale_name', locale: locale), url_for(locale: locale.to_s)
    - else
      = link_to t('locale_name', locale: locale), url_for(locale: nil)
