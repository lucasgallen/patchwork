%nav.navbar.navbar-expand-md.navbar-dark.shadow--light
  = link_to t('sivumbike_patchworks'), root_path, class: 'navbar-brand'
  %button.navbar-toggler{ |
    type: 'button', |
    data: { toggle: 'collapse', target: '#navbar' }, |
    aria: { controls: 'navbar', expanded: 'false', label: 'Toggle navigation' } |
  } |
    %span.navbar-toggler-icon

  - if type === 'app'
    = render :partial => 'app_nav_items'
  - elsif type === 'admin'
    = render :partial => 'admin_nav_items'
