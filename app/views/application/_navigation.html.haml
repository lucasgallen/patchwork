%nav.navbar.navbar-expand-md.navbar-light.bg-light
  = link_to "Sivumbike Patchworks", root_path, class: 'navbar-brand'
  %button.navbar-toggler{ |
    type: 'button', |
    data: { toggle: 'collapse', target: '#navbar' }, |
    aria: { controls: 'navbar', expanded: 'false', label: 'Toggle navigation' } |
  } |
    %span.navbar-toggler-icon

  %div.collapse.navbar-collapse#navbar
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to t('about'), about_path, class: 'nav-link'
      %li.nav-item
        = link_to t('contact'), contact_path, class: 'nav-link'
      - if user_signed_in?
        - if current_user.role == 'admin'
          %li.nav-item
            = link_to t('dashboard'), admin_root_path, class: 'nav-link'

    = link_to t('sign_out'), destroy_session_path(current_user),
      method: :delete, class: 'btn btn-outline-danger'
